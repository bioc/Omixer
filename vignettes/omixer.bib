file = {:C$\backslash$:/Users/ljsinke/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Leek et al. - 2010 - Tackling the widespread and critical impact of batch effects in high-throughput data.pdf:pdf},
issn = {14710056},
keywords = {Bioinformatics,Genetic techniques},
month = {oct},
number = {10},
pages = {733--739},
