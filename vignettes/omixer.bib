issn = {1750192X},
journal = {Epigenomics},
keywords = {ComBat,DNA methylation,Illumina Infinium MethylationEPIC BeadChip,Infinium Methylation 27K,Infinium Methylation 450K,epigenetics,epigenomics,positional effects},
month = {may},
number = {5},
